<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    card_view:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkblue">

        <LinearLayout
            android:id="@+id/name_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TableLayout
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                >

                <TableRow>
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.8"
                        android:layout_marginTop="10dp"
                        android:text="Representative"
                        android:textSize="20dp"
                        android:textStyle="italic"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:id="@+id/party"
                        android:layout_height="41dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/rparty"/>

                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/first_name"
                        android:textSize="28dp"
                        android:text="Dianne"
                        android:textColor="@color/white"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/last_name"
                        android:layout_marginTop="5dp"
                        android:textSize="28dp"
                        android:text="Last Name"
                        android:textColor="@color/white"/>
                </TableRow>

            </TableLayout>

            <ImageView
                android:id="@+id/photo"
                android:layout_marginLeft="15dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/dianne"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sampleemail@us.gov"
                android:textStyle="italic"
                android:textSize="18dp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/website"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="http://www.feinstein.senate.gov/public/"
                android:textStyle="italic"
                android:textSize="18dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/twitter_account"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\@somebody"
                android:textSize="18dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/twitter_content"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Today we reflect on the contributions and leadership of U.S. presidents throughout our nationâ€™s great history. Happy #PresidentsDay."
                android:textSize="18dp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <Button
            android:id="@+id/more_info"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="240dp"
            android:background="@color/darkblue"
            android:text="MORE INFO"
            android:textColor="@color/grey"
            android:shadowRadius="0"
            android:stateListAnimator="@null"
            android:textSize="18dp"
            android:gravity="center_horizontal|center_vertical"/>

    </LinearLayout>


</android.support.v7.widget.CardView>
